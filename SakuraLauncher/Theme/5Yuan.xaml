<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="Background_SidePanel" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#664f97" Offset="0"/>
        <GradientStop Color="#584572" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Background_MainPanel" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#584572" Offset="0"/>
        <GradientStop Color="#2c1c4b" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Background_Tunnel" StartPoint="0,0" EndPoint="0.5,1">
        <GradientStop Color="#664f97" Offset="0"/>
        <GradientStop Color="#584572" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="TabGradient_Start">#d5c0cf</Color>
    <Color x:Key="TabGradient_Middle">#b186a1</Color>
    <Color x:Key="TabGradient_End">#8f7596</Color>
    <Color x:Key="TabGradient_EndMiddle">#ee8f7596</Color>
    <Color x:Key="TabGradient_EndTransparent">#008f7596</Color>
</ResourceDictionary>