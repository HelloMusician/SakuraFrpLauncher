<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="Background_SidePanel" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#529a82" Offset="0"/>
        <GradientStop Color="#507564" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Background_MainPanel" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#507564" Offset="0"/>
        <GradientStop Color="#3d6658" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Background_Tunnel" StartPoint="0,0" EndPoint="0.5,1">
        <GradientStop Color="#529a82" Offset="0"/>
        <GradientStop Color="#507564" Offset="1"/>
    </LinearGradientBrush>

    <Color x:Key="TabGradient_Start">#bcdceb</Color>
    <Color x:Key="TabGradient_Middle">#a9d5c6</Color>
    <Color x:Key="TabGradient_End">#99c5a6</Color>
    <Color x:Key="TabGradient_EndMiddle">#ee99c5a6</Color>
    <Color x:Key="TabGradient_EndTransparent">#0099c5a6</Color>
</ResourceDictionary>